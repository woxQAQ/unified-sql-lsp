{
  "name": "unified-sql-grammar",
  "version": "0.1.0",
  "description": "Multi-dialect SQL grammar for tree-sitter",
  "scripts": {
    "build": "./build.sh",
    "build:base": "cd src/grammar && DIALECT=base tree-sitter generate -o gen",
    "build:mysql": "cd src/grammar && DIALECT=mysql tree-sitter generate -o gen",
    "build:postgresql": "cd src/grammar && DIALECT=postgresql tree-sitter generate -o gen",
    "test": "tree-sitter test",
    "test:base": "cd src/grammar && DIALECT=base tree-sitter test",
    "test:mysql": "cd src/grammar && DIALECT=mysql tree-sitter test",
    "test:postgresql": "cd src/grammar && DIALECT=postgresql tree-sitter test"
  },
  "keywords": ["sql", "parser", "tree-sitter", "grammar"],
  "author": "Vibe Kanban Team",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "tree-sitter-cli": "^0.26.0"
  },
  "tree-sitter": [
    {
      "scope": "source.unified_sql",
      "file-types": ["sql"]
    }
  ]
}
